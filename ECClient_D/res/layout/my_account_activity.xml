        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line" />

        <LinearLayout
            android:id="@+id/ll_account_conservation"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:orientation="horizontal" >

